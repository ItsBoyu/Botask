<h2 class="my-3"><%= t('user.edit') %></h2>

<div class="col-2">
  <%= form_with model: @user, url: admin_user_path ,local: true do |f| %>
    <% if @user.errors.any? %>
      <ul>
        <% @user.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    <% end %>
  
    <div>
      <%= f.label :name, class: 'form-label' %>
      <%= f.text_field :name, class: 'form-control mb-2' %>
    </div>
    
    <div>
      <%= f.submit t('edit'), class: 'btn btn-info my-2' %>
    </div>
  <% end %>
</div>
<div class="my-2">
  <%= lineless_link_to(t('return'), admin_users_path) %>
</div>
