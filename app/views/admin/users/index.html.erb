<h1><%= link_to t('users.list'), admin_users_path %></h1>

<div>
  <% @users.each do |user| %>
    <div class='users'>
      <h3><%= link_to user.name, admin_user_path(user.id) %></h3>
      <%= authority(user) %>
      <%= user.tasks.count %> |
      <%= link_to t('edit'), edit_admin_user_path(user.id) %> |
      <%= link_to t('delete'), admin_user_path(user.id), method: 'delete' %>
      <%= link_to t('change_authority'), change_authority_admin_user_path(user.id), method: 'post' %>
    </div>
  <% end %>
</div>

<div>
  <%= link_to t('add'), new_admin_user_path %>
</div>


