<%= form_with model: task, local: true do |f| %>

  <div>
    <%= f.label :title, t('task.title') %>
    <%= f.text_field :title %>
  </div>
  
  <div>
    <%= f.label :content, t('task.content') %>
    <%= f.text_area :content %>
  </div>
  
  <div>
    <%= f.submit t('task.submit', action: action) %>
  </div>
  
<% end %>